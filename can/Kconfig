menuconfig CAN
	bool "CAN Subsystem"
	depends on MACH_HAS_CAN 
	help
		Activate CAN Subsystem
	config CAN_THREAD_SAFE
		bool "CAN is thread safe"
		depends on CAN
		select USE_MUTEXES
		select USE_RECURSIVE_MUTEXES
		help
			Make CAN thread safe
	config CAN_FD
		bool "Activate CAN FD Support"
		depends on CAN
	config CAN_MULTI
		bool "Multiply CAN"
		depends on CAN
		help
			Multiply CAN Driver
