menuconfig DAC
	bool "DAC Subsystem"
	help
		Activate DAC Subsystem
	config DAC_THREAD_SAVE
		bool "DAC is Thread Save"
		depends on DAC
		select USE_MUTEXES
		select USE_RECURSIVE_MUTEXES
		help
			Make DAC Thread save
	config DAC_MULTI
		bool "Multiple DACs"
		depends on DAC
		help
			Multiple DACs
	config MCP492X
		bool "TI MCP492X Driver"
		depends on SPI
		depends on DAC
		help 
			TI MCP492X Driver connected with spi
		config MCP492X_DEBUG
			bool "MCP492X Debug printf"
			depends on MCP492X
			default n
